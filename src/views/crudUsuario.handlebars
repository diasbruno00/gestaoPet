
	<link rel="stylesheet" type="text/css" href="crudUsuario/css/style.css">

   	<section class="py-5 my-5">
		<div class="container">
			<h1 class="mb-5">Configurações</h1>
			<div class="bg-white shadow rounded-lg d-block d-sm-flex">
				<div class="profile-tab-nav border-right">
					<div class="p-4">
					
						<h4 class="text-center"> informar o nome aqui</h4> 
					</div>
					<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
						<a class="nav-link active" id="account-tab" data-toggle="pill" href="#account" role="tab" aria-controls="account" aria-selected="true">
							<i class="fa fa-home text-center mr-1"></i> 
							Usuário
						</a>
						<a  href="/principal" class="nav-link" id="application-tab" data-toggle="pill" role="tab" aria-controls="application" aria-selected="false">
							<i class="fa fa-tv text-center mr-1"></i> 
							Voltar ao Inicio
						</a>
					</div>
				</div>

				<div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
					<div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">
						<h3 class="mb-4">Configurações</h3>
						
       {{#each usuario}}

						 <form action="/cadastro/{{_id}}" method="post">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
								  	<label>Primeiro Nome</label>
								  	<input type="text" class="form-control" value="{{primeiroNome}}" name="nome" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
								  	<label>Sobrenome</label>
								  	<input type="text" class="form-control" value="{{sobrenome}}" name="sobrenome" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
								  	<label>Email</label>
											<input type="text" class="form-control" value="{{email}}" name="email" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
								  	<label>Telefone</label>
								  	<input type="text" class="form-control" value="{{telefone}}" name="telefone" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
								  	<label>CPF / CNPJ</label>
								  	<input type="text" class="form-control" value="{{identificador}}" name="identificador" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
								  	<label>Idade</label>
								  	<input type="text" class="form-control" value="{{idade}}" name="idade" required>
								</div>
							</div>
						
							<div class="col-md-12">
								<div class="form-group">
								  	<label>Bio</label>
									<textarea class="form-control" rows="4" name="bio" value="" required>{{bio}}</textarea >
								</div>
							</div>
							
							
						</div>
						<div>
							<button class="btn btn-primary" type="submit" >Atualizar</button>
							<button class="btn btn-danger" >Excluir</button>
						</div>
						</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
	</section>

		